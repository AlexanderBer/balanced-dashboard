<div class="modal hide delete-key">
    <form {{action confirm on="submit"}}>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h2>Delete this key?</h2>
    </div>
    <div class="modal-body">

        <span class="label7a">Are you sure you want to delete this key?</span>
        {{#if moreWarning}}<br><span class="label7a warn">CAUTION! This is the current key. You probably don't want to delete this.</span>{{/if}}
        <li>
            <ul>ID: {{key.id}}</ul>
            <ul>Name: {{key.meta.name}}</ul>
            <ul>Created At: {{humanReadableDateShort key.created_at}}</ul>
        </li>
    </div>
    <div class="modal-footer">
        <button class="btn danger" type="button" data-dismiss="modal">Cancel</button>
        <button class="btn delete-key-btn" type="button" {{action confirm}}>Yes</button>
    </div>
    </form>
</div>
{{#if displayDelete}}
    <a href="#" {{action "open"}} class="confirm-delete-key">&times;</a>
{{/if}}
