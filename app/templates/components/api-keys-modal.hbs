<div class="modal hide" id="api-keys">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h2>Manage API Keys</h2>
	</div>
	<div class="modal-body">
		<p><span class="label7a">View the Secret of your current key:</span>
			<span>
				{{#if view.keySecret }}
					{{marketplaceSecret}}
				{{else}}
					<a href="#" {{action showKeySecret}}>Click to show</a>
				{{/if}}
			</span>
		</p>
		<br>
		<table class="items">
			<thead>
				<tr>
					<th class="span3">Created </th>
					<th class="span5">Name </th>
					<th class="span6">ID </th>
					<th class="span1">Delete? </th>
				</tr>
			</thead>
			<tbody>
				{{#each key in keys}}
					<tr>
						<td class="span3">{{humanReadableDateShort key.created_at}}</td>
						<td class="span5">{{#if key.meta.name}}{{key.meta.name}}{{/if}}</td>
						<td class="span6">{{key.id}}</td>
						<td class="span1">
							{{api-key-delete-modal action="delete"  param=key key=key marketplaceSecret=marketplaceSecret oneKey=oneKey haveOtherSecrets=haveOtherSecrets}}
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
		<br>
		{{#if addedKeys}}
			<p><span class="label7a">Keys you just created. Copy their secret, this is your only chance to see it</span></p>
			<table class="items added-keys">
				<thead>
					<tr>
						<th class="span2">Name </th>
						<th class="span5">ID </th>
						<th class="span7">Secret </th>
						<th class="span1">Delete? </th>
					</tr>
				</thead>
				<tbody>
					{{#each key in addedKeys}}
						<tr>
							<td class="span2">{{#if key.meta.name}}{{key.meta.name}}{{/if}}</td>
							<td class="span5">{{key.id}}</td>
							<td class="span7">{{key.secret}}</td>
							<td class="span1">{{api-key-delete-modal action="delete"  param=key key=key marketplaceSecret=marketplaceSecret oneKey=oneKey haveOtherSecrets=haveOtherSecrets}}</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		{{/if}}
		<br>
		<form {{action createKey on="submit"}}>
		{{input type="text" placeholder="New Key Name (optional)" value=keyName class="key-name-input full"}}
		<button type="submit" href="#" {{action createKey}} class="create-key-button">Create New Key</a>
		</form>
	</div>
</div>
<a href="#" class="show-api-keys" {{action open}}>Show Keys</a>
