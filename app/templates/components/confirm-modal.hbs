<div class="modal hide" data-backdrop="static" data-keyboard="false">
    <div class="modal-header">
        <h2>{{title}}</h2>
    </div>
    <div class="modal-body">
      {{mainText}}
      <div class="actions">
        <button class="btn" {{action "cancel" on="click" target="view"}}>Cancel</button>
        <button class="btn" {{action "confirm" on="click" target="view"}}>Yes</button>
      </div>
    </div>
</div>
