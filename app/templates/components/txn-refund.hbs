<div class="refund">
  <div {{bindAttr class=":main-header :transaction-type-subheader refund.status"}}>
    <div class="row">
      <div class="span2 border-adjust label">
        <span class="subhead2d">Refund</span>
      </div>
      <div class="span10 title">
        <span class="transaction-description subhead2d">{{titleCase refund.status}}: ${{refund.amount_dollars}}</span>
      </div>
      <div class="span8 border-adjust buttons">
        <div class="buttons-container"></div>
      </div>
    </div>
  </div>
  <div class="transaction-body">
    <div class="row">
      <div class="span2 border-adjust"></div>
      <div class="span18 border-adjust">
        <div class="row-fluid">
          <div class="span16">
            <section class="transaction-info">
              <div class="key-value-display">
                <header>
                  <h3>Refund
                    {{edit-transaction-modal transaction=refund}}
                  </h3>
                </header>
                {{#if refund.is_failed}}
                  <div class="key-value-row">
                    <label class="key">Status</label>
                    <span {{bindAttr class=":value refund.status"}}>{{ refund.status_description }}</span>
                  </div>
                {{/if}}
                <div class="key-value-row">
                  <label class="key">Created</label>
                  <span class="value">{{humanReadableDateLong refund.created_at }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">Internal Description</label>
                  <span class="value">{{ refund.description }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">ID</label>
                  <span class="value">{{ refund.id }}</span>
                </div>
                <div class="key-value-row">
                  <label class="key">Txn #</label>
                  <span class="value">{{ refund.transaction_number }}</span>
                </div>
                <div class="key-value-row meta">
                  <label class="key">Meta</label>
                  <span class="value">
                    {{#each meta in refund.meta_array}}
                      {{ meta.key }}: {{ meta.value }}<br/>
                    {{/each}}
                  </span>
                </div>
              </div>
            </section>

            {{txn-funding-instrument funding_instrument=refund.debit.source}}
          </div>
          <div class="span10">
            {{view Balanced.EventsSideBarView contentBinding=refund}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
