<div {{bind-attr class=":results :results-framed view.isError:results-error view.isNeutral:results-neutral"}}>
  <header class="header">
    <span class="count">{{view.items.length}}</span>
    <span class="title nav3d">{{view.title}}</span>
  </header>
  <table class="table table-fixed table-border">
    <thead>
      <tr>
        <th class="label6a">bank_account_id</th>
        <th class="label6a">new_customer_name</th>
        <th class="label6a">new_customer_email</th>
        <th class="label6a">new_bank_account_routing_number</th>
        <th class="label6a">new_bank_account_number</th>
        <th class="label6a">new_bank_account_holders_name</th>
        <th class="label6a">new_bank_account_type</th>
        <th class="label6a">appears_on_statement_as</th>
        <th class="label6a table-column-20percent">description</th>
        <th class="label6a table-column-amount">amount</th>
        <th class="table-column table-column-icons"></th>
      </tr>
    </thead>
    <tbody>
      {{#each view.items}}
        <tr class="table-row">
          <td>{{csvFields.bank_account_id}}</td>
          <td>
            <span class="label label-error">{{csvFields.new_customer_name}}</span>
          </td>
          <td>{{csvFields.new_customer_email}}</td>
          <td>{{csvFields.new_bank_account_routing_number}}</td>
          <td>{{csvFields.new_bank_account_number}}</td>
          <td>{{csvFields.new_bank_account_holders_name}}</td>
          <td>{{csvFields.new_bank_account_type}}</td>
          <td>{{csvFields.appears_on_statement_as}}</td>
          <td>{{csvFields.description}}</td>

          <td {{bind-attr class="credit.amount:table-column-amount"}}>
            {{#if credit.amount}}
              {{formatCurrency csvFields.amount}}
            {{else}}
              {{csvFields.amount}}
            {{/if}}
          </td>

          <td class="table-column table-column-icons">
            {{#if isInvalid}}
              <a {{action "confirmRemoveCreditCreator" this target="view.parentView"}} class="remove-icon">&times;</a>
            {{else}} {{#if isProcessing}}
              <i class="icon icon-loading"></i>
            {{else}} {{#if isComplete}}
              <i class="icon icon-checkmark"></i>
            {{/if}} {{/if}} {{/if}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
